<% if logged_in? %>
  <div class="row">
    <div class="col-xs-4 greeting">
      Hi, <%= current_user.name %>!
    </div>
    <div class="col-xs-4 text-center">
      <h1 id="logo">FIT TRIP</h1>
    </div>
    <div class="col-xs-4 logout-link text-center">
      <%= link_to "log out", signout_path %>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-xs-8">
        STEPS: <%= @current_steps %> / <%= @step_goal %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 text-center">
      Time to meet your step goal. Where would you like to go?
    </div>
  </div>

  <div class="row place-choice-row">
    <div class="col-xs-6 place-choice-box">
      <%= link_to "PARK", results_path("park") %>
    </div>
    <div class="col-xs-6 place-choice-box">
      <%= link_to "MUSEUM", results_path("museum") %>
    </div>
  </div>
  <div class="row place-choice-row">
    <div class="col-xs-6 place-choice-box">
      <%= link_to "STORE", results_path("store") %>
    </div>
    <div class="col-xs-6 place-choice-box">
      <%= link_to "SCHOOL", results_path("school") %>
    </div>
  </div>
  <div class="row place-choice-row">
    <div class="col-xs-6 place-choice-box">
      <%= link_to "RESTAURANT", results_path("restaurant") %>
    </div>
    <div class="col-xs-6 place-choice-box">
      <%= link_to "I DON'T CARE", results_path("random") %>
    </div>
  </div>

<% else %>
  <div id="login-image">
    <div id="app-logo">
      fit trip
    </div>
    <div id="login-link">
      <%= link_to "log in", "/auth/fitbit" %>
    </div>
  </div>
<% end %>
