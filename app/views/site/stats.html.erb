<% if logged_in? %>
  <%= render "shared/nav" %>
  <div class="row">
    <div class="col-xs-6">
        STEPS: <%= @current_steps %> / <%= @step_goal %>
    </div>
    <div class="col-xs-6 steps-needed-box">
      <%= @steps_needed %> STEPS TO GO!
    </div>
  </div>

  <script src="http://code.highcharts.com/highcharts.js"></script>
  <div id="chart" style="width:100%; height:400px;"></div>


<% else %>
  <div id="login-image">
    <div id="app-logo">
      fit trip
    </div>
    <div id="login-link">
      <%= link_to "log in", "/auth/fitbit" %>
    </div>
  </div>
<% end %>
