<% if logged_in? %>
  <%= render "shared/nav" %>
  <!-- <script src="https://code.highcharts.com/highcharts.js"></script> -->
  <div id="chart" style="width:100%; height:400px;"></div>
  <div>
    LIFETIME MILES: <%= @lifetime_distance %>
  </div>
  <div>
    CURRENT BADGE: <%= @current_badge %>
  </div>
  <div>
    NEXT BADGE: <%= @next_badge %>
  </div>
